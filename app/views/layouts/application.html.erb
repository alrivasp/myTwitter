<!DOCTYPE html>
<html>
  <head>
    <title>Whisper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--FavIcon-->
    <%= favicon_link_tag 'https://upload.wikimedia.org/wikipedia/en/thumb/2/2b/Whisper_app_logo.png/200px-Whisper_app_logo.png' %>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Fonts Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.1/css/all.css" integrity="sha384-xxzQGERXS00kBmZW/6qxqJPyxW3UR0BPsL4c8ILaIWXva5kFi7TxkIIaMiKtqV1Q" crossorigin="anonymous">
    <!--Fonts Google-->
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&display=swap" rel="stylesheet">
    <!-- CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Jasva Script -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="">
      <!--Inicio NavBar Left-->
        <%= render "shared/navbar_left" %>
      <!--Fin NavBar Left-->

      <!--Inicio NavBar Right-->
      <%= render "shared/navbar_right" %>
      <!--Fin NavBar Right-->

      <!--Inicio Main-->
      <main class="content-ppal color-gray">        
        <%= yield %>
      </main>
      <!--Inicio Main-->

      <!--Inicio Footer-->
      <% if !user_signed_in? %>
        <%= render "shared/footer"%>
      <% end %>
      <!--Fin Footer-->
    </div>
    <!-- Librerias Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>  
    <script type="text/javascript">
      $(function(){
        $("#myModal").modal();
      });
    </script>
  </body>
</html>
