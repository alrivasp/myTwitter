<!--Title-->
<div class="border-down pt-1 pl-4 text-center">
  <h4><%= t('.sign_up', :default => "Sign up") %></h4>
</div>
<div class="content-sec color-gray border-down pb-4 devise-how">
    <div class="">
      <!--Formulario-->
      <div class="devise-form text-13">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <!--Mensajeria-->
          <% if devise_error_messages!.present? %>
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title color-blue" id="exampleModalLabel">No se pudo Registrar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body text-dark">
                    <%= devise_error_messages! %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>        
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div><%= f.label :username, "Usuario" %><br />
          <%= f.text_field :username, class:"form-control text-13" %></div>

          <div><%= f.label :photo_url, "Foto Avatar" %><br />
          <%= f.text_field :photo_url, class:"form-control text-13" %></div>

          <div><%= f.label :header_photo, "Foto Cabecera" %><br />
          <%= f.text_field :header_photo, class:"form-control text-13" %></div>

          <div><%= f.label :email %><br />
          <%= f.email_field :email, class:"form-control text-13" %></div>

          <div><%= f.label :password %><br />
          <%= f.password_field :password, class:"form-control text-13" %></div>

          <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class:"form-control text-13" %></div>

          <div><%= f.submit t('.sign_up', :default => "Sign up"), class:"text-13 btn btn-primary btn-lg btn-block mt-3" %></div>
        <% end %>
        <div class="pt-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
</div>